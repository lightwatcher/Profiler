 <h1> Science Profiles</h1>
  <div class='container'>
    <div class='row'>
      <div class='col-md-3'>
        <img  src="<%= @profile.src %>" alt='Photo'>
      </div>
      <div class='col-md-9'>
        <p><b><%= @profile.name %></b> Member since <%=@profile.year%> </p> 
        <p> <%= @profile.bio %></p>
        </div>
      <p><strong>Location</strong>: <%= @profile.location %></p>
      <p><strong>Completion:</strong></p>
      <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 95%;">
    95%
  </div>
</div>
<a href="/profile/<%= @profile.id %>/edit">Edit</a>
<a href="/profile/<%= @profile.id %>/delete">Delete</a>