<h1>Edit Profile</h1>


<form action="/update_profile/<%= @profile.id %>">
  <input type="text" name="Name" placeholder="Name" value="<%= @profile.name %>">
  <input type="text" name="Year" placeholder="Year" value="<%= @profile.year %>">
  <input type="text" name="Bio" placeholder="Bio" value="<%= @profile.bio %>">
  <input type="text" name="Src" placeholder="Image Url" value="<%= @profile.src %>">
  <input type="text" name="Location" placeholder="Location" value="<%= @profile.location %>">
  <input type="submit">
</form>